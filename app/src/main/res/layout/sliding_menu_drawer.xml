<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grey"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_ketqua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onDrawerItemClick"
        android:src="@drawable/text_ketqua" />

    <ImageView
        android:id="@+id/image_thongke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onDrawerItemClick"
        android:src="@drawable/text_thongke" />

    <ImageView
        android:id="@+id/image_lichquay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onDrawerItemClick"
        android:src="@drawable/text_lichquay" />

    <ImageView
        android:id="@+id/image_tienich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onDrawerItemClick"
        android:src="@drawable/text_tienich" />
</LinearLayout>